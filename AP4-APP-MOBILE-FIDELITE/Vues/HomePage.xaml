<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4_APP_MOBILE_FIDELITE.Vues.HomePage"
             Title="Accueil">

    
    <Grid>
        <!-- Bouton Mode éditeur en haut à droite -->
        <Button Text="Mode éditeur"
                Clicked="goEditor"
                WidthRequest="120"
                HeightRequest="40"
                BackgroundColor="red"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,10,10,0" />

        <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="0"
            Spacing="25"
            Padding="30"
            VerticalOptions="Center">
           
            <Label x:Name="UserInfoLabel"
                   Text="Nom et Prénom"
                   FontSize="20"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Frame
                CornerRadius="5"
                Padding="0"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Image Source="pismafidelitecard.png"
                       WidthRequest="200"
                       HeightRequest="100" />
            </Frame>

            <Button Text="Voir les blasons disponibles" 
         Clicked="ShowBlasons"
         WidthRequest="220"
         BackgroundColor="#089" />

        </VerticalStackLayout>
    </Grid>
</ContentPage>
