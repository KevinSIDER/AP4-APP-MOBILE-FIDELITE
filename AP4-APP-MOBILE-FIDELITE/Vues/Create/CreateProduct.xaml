<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4_APP_MOBILE_FIDELITE.Vues.CreateProduct"
             Title="PISMAFIDELITE - Créer un produit">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            VerticalOptions="Center">

            <Entry x:Name="NomProduitEntry" 
                   Placeholder="Veuilez saisir un nom pour votre produit"
                   WidthRequest="400"/>

            <Entry x:Name="PrixProduitEntry" 
                   Placeholder="A quel prix souhaitez-vous vendre votre article ?"
                   WidthRequest="400"/>

            <Entry x:Name="PointsFideliteEntry" 
                   Placeholder="Combien de pisma points de fidélités va t-il rapporté ?"
                   WidthRequest="400" />

            <Entry x:Name="ImageUrlEntry" 
                   Placeholder="Veuillez saisir l'url de l'image de votre produit"
                   WidthRequest="400"/>

            <Button Text="Créer mon produit" 
                    Clicked="OnCreateProduct"
                    WidthRequest="150"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>