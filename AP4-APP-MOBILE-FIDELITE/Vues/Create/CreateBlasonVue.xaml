<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4_APP_MOBILE_FIDELITE.Vues.CreateBlasonVue"
             Title="PISMAFIDELITE - Créer un blason">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            VerticalOptions="Center">

            <Entry x:Name="LeNomBlason" 
                   Placeholder="Veuillez saisir un nom pour votre blason"
                   WidthRequest="400"/>

            <Entry x:Name="LeMontantAchats" 
                   Placeholder="Quel sera le montant d'achat pour obtenir votre blason ?"
                   WidthRequest="400"/>

            <Button Text="Créer mon blason" 
                    Clicked="OnCreateBlason"
                    WidthRequest="150"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>