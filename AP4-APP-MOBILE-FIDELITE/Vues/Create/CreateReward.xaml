<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4_APP_MOBILE_FIDELITE.Vues.CreateReward"
             Title="Créer une récompense">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            VerticalOptions="Center">

            <Entry x:Name="NomRecompense" 
                   Placeholder="Veuillez saisir le nom de votre récompense"
                   WidthRequest="400"/>

            <Entry x:Name="PointsNecessaires" 
                   Placeholder="Combien de points de pismafidélité nécéssaire ?"
                   WidthRequest="400"/>

            <Entry x:Name="LeProduit" 
                   Placeholder="Veuillez saisir l'identifiant du produit associé"
                   WidthRequest="400"/>    

            <Button Text="Créer une récompense" 
                    Clicked="OnCreateReward"
                    WidthRequest="200"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>