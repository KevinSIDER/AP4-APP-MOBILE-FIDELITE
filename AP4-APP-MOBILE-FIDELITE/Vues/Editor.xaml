<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4_APP_MOBILE_FIDELITE.Vues.Editor"
             Title="PISMAFIDELITE - Mode éditeur">

    <VerticalStackLayout
            Grid.Column="0"
            Spacing="25"
            Padding="30"
            VerticalOptions="Center">
        <Button Text="Créer un produit" 
                    Clicked="GoCreateProduct"
                    WidthRequest="200"
                    BackgroundColor="#089" />
        <Button Text="Créer un blason" 
                    Clicked="GoCreateBlason"
                    WidthRequest="200"
                    BackgroundColor="#089" />
        <Button Text="Créer une catégorie" 
                    Clicked="GoCreateCategorie"
                    WidthRequest="200"
                    BackgroundColor="#089" />
        <Button Text="Créer une récompense" 
                    Clicked="GoCreateReward"
                    WidthRequest="200"
                    BackgroundColor="#089" />
        <Button Text="Créer une commande" 
            Clicked="GoCreateCommande"
            WidthRequest="200"
            BackgroundColor="#089" />
    </VerticalStackLayout>
</ContentPage>